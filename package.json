{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "vue-template",
    "description": "A template with Nuxt3 built on Vue3 with focus on performance and best practices.",
    "license": "MIT",
    "author": {
        "name": "krudi",
        "email": "patryk.kudlik@gmail.com",
        "url": "https://github.com/krudi"
    },
    "private": false,
    "homepage": "https://github.com/krudi/vue-template#readme",
    "bugs": {
        "url": "https://github.com/krudi/vue-template/issues"
    },
    "keywords": [
        "template"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/krudi/vue-template.git"
    },
    "engines": {
        "node": ">= 22.18.0",
        "npm": ">= 11.6.2"
    },
    "packageManager": "npm@11.6.2",
    "type": "module",
    "scripts": {
        "dev": "nuxt dev",
        "build": "nuxt build",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "start": "node .output/server/index.mjs",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint:eslint": "eslint . --cache --cache-location .cache/.eslintcache",
        "lint:eslint:fix": "eslint . --fix --cache --cache-location .cache/.eslintcache",
        "lint:stylelint": "stylelint --c ./stylelint.config.mjs **/*.css",
        "lint:stylelint:fix": "stylelint -c ./stylelint.config.mjs --fix **/*.css"
    },
    "devDependencies": {
        "@krudi/prettier-config": "^0.1.6",
        "@krudi/typescript-config": "^0.1.7",
        "@nuxt/devtools": "^3.0.0",
        "@nuxt/eslint": "^1.10.0",
        "@nuxt/types": "^2.18.1",
        "@types/node": "^24.9.2",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.38.0",
        "nuxt": "^4.2.0",
        "postcss": "^8.5.6",
        "postcss-import": "^16.1.1",
        "postcss-load-config": "^6.0.1",
        "postcss-nested": "^7.0.2",
        "prettier": "^3.6.2",
        "stylelint": "^16.25.0",
        "stylelint-config-standard": "^39.0.1",
        "stylelint-order": "^7.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vue-tsc": "^3.1.2"
    }
}
